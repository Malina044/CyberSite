/* Base Styles */
body {
    margin: 0;
    font-family: 'Arial', sans-serif;
    background: #0a0a0a;
    color: #fff;
    overflow-x: hidden;
  }
  
  a {
    text-decoration: none;
    color: #0ff;
    transition: color 0.3s;
  }
  
  a:hover {
    color: #f0f;
  }
  
  /* Header */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background: rgba(0, 0, 0, 0.8);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
  }
  
  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #0ff;
  }
  
  .logo span {
    color: #f0f;
  }
  
  .nav a {
    margin: 0 10px;
  }
  
  /* Hero Section */
  .hero {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
  }
  
  .hero h1 {
    font-size: 3rem;
    color: #0ff;
    text-shadow: 0 0 10px #0ff;
  }
  
  .hero p {
    font-size: 1.2rem;
    margin: 20px 0;
  }
  
  .cta-button {
    background: #f0f;
    padding: 10px 20px;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
  }
  
  .cta-button:hover {
    background: #0ff;
  }
  
  /* Sections */
  .section {
    padding: 100px 20px;
    text-align: center;
  }
  
  .section h2 {
    font-size: 2.5rem;
    color: #f0f;
    margin-bottom: 20px;
  }
  
  .section p {
    font-size: 1.2rem;
  }
  
  /* Services */
  .services {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  
  .service-card {
    background: rgba(0, 0, 0, 0.9);
    padding: 20px;
    border: 1px solid #0ff;
    border-radius: 10px;
    width: 200px;
    transition: transform 0.3s;
  }
  
  .service-card:hover {
    transform: scale(1.1);
  }
  
  /* Contact */
  .contact form {
    display: flex;
    flex-direction: column;
    gap: 10px;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .contact input, .contact textarea, .contact button {
    padding: 10px;
    border: 1px solid #0ff;
    border-radius: 5px;
    background: #1a1a1a;
    color: #fff;
  }
  
  .contact button {
    background: #f0f;
    cursor: pointer;
  }
  
  .contact button:hover {
    background: #0ff;
  }
  
  /* Footer */
  .footer {
    text-align: center;
    padding: 20px;
    background: rgba(0, 0, 0, 0.8);
  }
  